@model RokibPlusNet.ViewModels.NewMovieViewModel
@{
    ViewBag.Title = "AddMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Movie</h2>
@using (Html.BeginForm("AddNewMovie", "Movies"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(c => c.MovieName)
        @Html.TextBoxFor(c => c.MovieName, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.MovieName)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.ReleaseDate)
        @Html.TextBoxFor(c => c.ReleaseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.ReleaseDate)
    </div>
    @*<div class="form-group">
            @Html.LabelFor(c => c.DateAdded)
            @Html.TextBoxFor(c => c.DateAdded, new { @class = "form-control" })
        </div>*@
    <div class="form-group">
        @Html.LabelFor(c => c.NumberInStock)
        @Html.TextBoxFor(c => c.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.NumberInStock)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.GenreId)
        @Html.DropDownListFor(c => c.GenreId, new SelectList(Model.Genres, "GenreId", "GenreName"), "Select Genre Types", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.GenreId)
    </div>
    @Html.HiddenFor(c => c.MovieId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>


}
