@model IEnumerable<RokibPlusNet.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie","AddMovie","Movies",null,new{@class="btn btn-primary" })
@if (!Model.Any())
{
    <p>No Movie enlisted here</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>Movie Name</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var movies in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movies.MovieName, "EditMovie", "Movies", new { id = movies.MovieId }, null)</td>
                    <td>@movies.Genre.GenreName</td>
                </tr>
            }

        </tbody>

    </table>

}

